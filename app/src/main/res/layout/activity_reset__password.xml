<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".sign_In_Activity.ResetPassword" android:id="@+id/resetButton">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:ems="10"
            android:id="@+id/resetEmail" tools:layout_editor_absoluteX="99dp"
            tools:ignore="MissingConstraints" android:hint="Email" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            tools:text="Reset Password"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sendReset"
            tools:ignore="MissingConstraints" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/resetEmail"
            app:layout_constraintStart_toStartOf="@+id/resetEmail"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/resetEmail"/>
</androidx.constraintlayout.widget.ConstraintLayout>