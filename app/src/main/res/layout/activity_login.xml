<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorAccent">

    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailLogin" android:hint="Email" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:background="@drawable/rounded_edges_register_login"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordLogin" android:hint="pasword" tools:ignore="MissingConstraints"
            android:background="@drawable/rounded_edges_register_login"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/emailLogin"
            app:layout_constraintStart_toStartOf="@+id/emailLogin" app:layout_constraintEnd_toEndOf="@+id/emailLogin"/>
    <TextView
            android:text="Back to Registration?"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/back_to_registration"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buLogin" app:layout_constraintStart_toStartOf="@+id/buLogin"
            app:layout_constraintEnd_toEndOf="@+id/buLogin"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buLogin"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/passwordLogin"
            app:layout_constraintStart_toStartOf="@+id/passwordLogin"
            app:layout_constraintEnd_toEndOf="@+id/passwordLogin"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/forgot_password"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/back_to_registration"
            app:layout_constraintStart_toStartOf="@+id/back_to_registration"
            app:layout_constraintEnd_toEndOf="@+id/back_to_registration" android:text="Forgot Password"/>
</androidx.constraintlayout.widget.ConstraintLayout>