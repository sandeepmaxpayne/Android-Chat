<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chat_Message.MessageActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recylerView_latestMessage"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <com.google.android.gms.ads.AdView
            android:layout_width="45dp"
            android:layout_height="88dp"
            android:id="@+id/adView2"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="16dp"
            ads:adUnitId="ca-app-pub-5532713385492345/3799074559"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            ads:adSize="SMART_BANNER"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="327dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-5532713385492345/3578748552"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="129dp" android:layout_marginTop="4dp"
            ads:layout_constraintTop_toTopOf="parent" android:visibility="visible">
    </com.google.android.gms.ads.AdView>
    <com.google.android.gms.ads.AdView
            android:layout_width="323dp"
            android:layout_height="21dp" android:id="@+id/adView3"
            tools:ignore="MissingConstraints"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-5532713385492345/9825782074"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.gms.ads.AdView
            ads:adUnitId="ca-app-pub-5532713385492345/2460698880"
            ads:adSize="SMART_BANNER"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:id="@+id/adView4"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/adView2"/>
    <com.google.android.gms.ads.AdView
            ads:adSize="SMART_BANNER"
            android:layout_width="39dp"
            ads:adUnitId="ca-app-pub-5532713385492345/9710124206"
            android:layout_height="wrap_content" android:id="@+id/adView5" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toTopOf="@+id/adView4" app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.gms.ads.AdView
            android:layout_width="28dp"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-5532713385492345/9349540865"
            android:layout_height="wrap_content" android:id="@+id/adView6"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/adView2"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>